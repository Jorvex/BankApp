<Page x:Class="BankApp.AskUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankApp"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="325"
      Title="LogIn">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Turquoise"/>
        </Grid.Background>
        <Label Content="Enter your username: " HorizontalAlignment="Left" Margin="24,41,0,0" VerticalAlignment="Top" Height="47" Width="359" FontSize="18"/>
        <TextBox Name="Content" HorizontalAlignment="Left" Height="27" Margin="30,93,0,0" VerticalAlignment="Top" Width="180" FontSize="16"/>
        <Button Content="Log In" HorizontalAlignment="Left" Margin="220,153,0,0" VerticalAlignment="Top" Width="88" Height="26" Click="LogInButton"/>
    </Grid>
</Page>